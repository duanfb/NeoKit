<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_48">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fp_phone_radius_8_bg_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/fp_phone_discover_new_version"
            android:textColor="@color/fp_phone_color_alpha_70_black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_phone_dialog_version_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:textColor="@color/fp_phone_color_alpha_40_black"
            android:textSize="@dimen/sp_14"
            tools:text="@string/fp_phone_new_version_text" />


        <View
            style="@style/fp_phone_horizontal_split_line_alpha_10_black"
            android:layout_marginTop="@dimen/dp_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_dialog_version_cancel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fp_phone_cancel"
                android:textColor="@color/fp_phone_color_alpha_70_black"
                android:textSize="@dimen/sp_18" />

            <View style="@style/fp_phone_vertical_split_line_alpha_10_black" />

            <TextView
                android:id="@+id/tv_phone_dialog_version_update"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fp_phone_update"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
